  <!-- PRIVATE ORDER SECTION -->
  <section class="section" style="padding:60px 8%;">
    <h2>Vytvorte svoj artefakt</h2>

    <div class="private-order-grid" style="display:flex; gap:24px; flex-wrap:wrap;">
      <!-- ORDER FORM -->
      <div class="order-form" style="flex:1; min-width:300px; background:var(--glass); padding:24px; border-radius:28px;">
        <h3>Parametre produktu</h3>
        <label>Variant:</label>
        <select id="orderVariant">
          <option>Classic</option>
          <option>Limited</option>
          <option>Lacto-free</option>
          <option>Bezlepkove</option>
        </select>

        <label>Meno artefaktu:</label>
        <input type="text" id="orderName" placeholder="Napíšte názov">

        <label>Popis / špecifikácie:</label>
        <textarea id="orderDesc" placeholder="Popíšte požadované detaily" style="width:100%; padding:12px; border-radius:12px; margin:12px 0;"></textarea>

        <button id="sendInquiryBtn">Odoslať dopyt</button>
      </div>

      <!-- ORDER SUMMARY -->
      <div class="order-summary" style="flex:1; min-width:300px; background:var(--glass); padding:24px; border-radius:28px;">
        <h3>Vaša objednávka</h3>
        <p><strong>Variant:</strong> <span id="summaryVariant">Classic</span></p>
        <p><strong>Názov:</strong> <span id="summaryName">---</span></p>
        <p><strong>Popis:</strong> <span id="summaryDesc">---</span></p>
      </div>
    </div>
  </section>

  <footer>Curated for a select audience · <span id="visits"></span></footer>

  <script src="js/app.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const variantSelect = document.getElementById("orderVariant");
      const nameInput = document.getElementById("orderName");
      const descInput = document.getElementById("orderDesc");

      const summaryVariant = document.getElementById("summaryVariant");
      const summaryName = document.getElementById("summaryName");
      const summaryDesc = document.getElementById("summaryDesc");

      // update summary in real-time
      function updateSummary() {
        summaryVariant.innerText = variantSelect.value;
        summaryName.innerText = nameInput.value || "---";
        summaryDesc.innerText = descInput.value || "---";
      }

      variantSelect.addEventListener("change", updateSummary);
      nameInput.addEventListener("input", updateSummary);
      descInput.addEventListener("input", updateSummary);

      // send inquiry
      document.getElementById("sendInquiryBtn").addEventListener("click", () => {
        if(!nameInput.value || !descInput.value) {
          alert("Vyplňte názov a popis artefaktu.");
          return;
        }
        showEphemeral("inquiry", `Dopyt pre artefakt "${nameInput.value}" bol odoslaný ✅`);
        nameInput.value = "";
        descInput.value = "";
        variantSelect.value = "Classic";
        updateSummary();
      });
    });

    function showEphemeral(id, message){
      const el = document.createElement("div");
      el.className = "ephemeral";
      el.innerText = message;
      document.body.appendChild(el);
      setTimeout(()=>el.remove(),1200);
    }
  </script>

</body>
